# Database Configuration
# PostgreSQL connection string for Prisma ORM
DATABASE_URL="postgresql://user:password@localhost:5432/questgen"

# Direct database connection URL (used for migrations)
DIRECT_DATABASE_URL="postgresql://user:password@localhost:5432/questgen"

# Node Environment
NODE_ENV="development"

# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Better Auth Configuration
# Generate a secure secret: openssl rand -base64 32
BETTER_AUTH_SECRET="your-better-auth-secret"
BETTER_AUTH_URL="http://localhost:3000/api/auth"

# Google OAuth Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Google Gemini API Configuration
# Get this from Google AI Studio: https://aistudio.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key"

# Server Cache Configuration
# Time-to-live for cache entries in milliseconds (default: 5 minutes)
CACHE_TTL_MS="300000"

# Stale-while-revalidate threshold in milliseconds (default: 2 minutes)
# Data older than this but younger than TTL is served stale while refreshing
CACHE_STALE_THRESHOLD_MS="120000"

# Maximum number of cache entries to prevent memory leaks (default: 1000)
CACHE_MAX_SIZE="1000"
